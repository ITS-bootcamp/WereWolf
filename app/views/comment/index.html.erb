<% if params[:notice] %>
  <%= params[:notice] %>
<% end %>
<h1 class="text-center"><%= @room.name %></h1>
<h2>あなたの役職は、<%= current_user.room_users.find_by(room_id: @room.id).try(:role) %>です</h2>
<hr>

  <% @comments.each do |comment| %>
    <% if comment.user.rooms %>
      <div class="roomuser-email">
        <%= comment.user.email %>
      </div>
        
      <div class="room-comment">
        <%= comment.content %>
      </div>
      <hr>
    <% end %>
  <% end %>
  <%= form_for(@comment, :url => room_comment_index_path) do |f| %>
    <label>コメント：</label>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit '送信', class: "btn btn-success form-control" %>
    </div>
    
  <% end %>

  
